---
import PhpIcon from "../icons/Php.astro";
import JavascriptIcon from "../icons/Javascript.astro";
import HtmlIcon from "../icons/Html5.astro";
import CssIcon from "../icons/Css.astro";
import MysqlIcon from "../icons/Mysql.astro";

const TAGS = {
  PHP: {
    name: "PHP",
    class: "bg-[#777BB4] text-white",
    icon: PhpIcon,
  },
  JAVASCRIPT: {
    name: "Javascript",
    class: "bg-[#F7DF1E] text-black",
    icon: JavascriptIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#E34F26] text-white",
    icon: HtmlIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#1572B6] text-white",
    icon: CssIcon,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#4479A1] text-white",
    icon: MysqlIcon,
  },
};
const PROJECTS = [
  {
    title:"Desarrollo Fullstack | PHP plano, HTML, CSS, Javascript (Jquery), Mysql",
    description:"Desarrollo de sitio web para Mi Guía Catamarca utilizando PHP, HTML, CSS, Javascript (Jquery) y Mysql. La plataforma incluye un panel de administración para gestionar empresas, categorías, usuarios, etc. Ofrece un buscador de empresas, un mapa interactivo de Catamarca, un blog y múltiples formularios de contacto, registro e inicio de sesión para usuarios y empresas, así como opciones específicas para publicidad, sugerencias, denuncias y consultas.",
    link: "https://github.com/Frlawer/miguiacatamarca/tree/master",
    github: "https://github.com/Frlawer/miguiacatamarca/tree/master",
    image: "/miguiacatamarca.webp",
    tags:[TAGS.PHP, TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS, TAGS.MYSQL],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
        {title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
