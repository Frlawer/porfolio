---
import Badge from "../components/Badge.astro";
import ImageFront from "../components/ImageFront.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import EmailIcon from "../icons/Email.astro";
import SocialPill from "../components/SocialPill.astro";
---

<ImageFront class="rounded-full size-56 mx-auto mb-10" />

<h1
  class="bg-gradient-to-r from-violet-600 from-20% to-orange-400 bg-clip-text text-transparent text-5xl font-bold flex justify-center flex-row gap-x-4 pb-10 flex-wrap"
>
  Hey, soy Francisco <a
    href="https://linkedin.com/in/frandir"
    target="_blank"
    rel="noopener"
    class="flex justify-center items-center"
  >
    <Badge>Disponible para trabajar</Badge>
  </a>
</h1>
<h2 class="text-2xl opacity-80 text-wrap">
  <span>+10 años de experiencia como freelance.</span>
  <span class="text-yellow-200/90">Desarrollador web.</span>
  <span class="text-red-200/90">Catamarqueño en Neuquén, Argentina.</span>
  <span class="opacity-75"
    >Preparado para asesorar empresas en soluciones web.</span
  >
</h2>

<nav class="flex gap-x-4 mt-8 justify-center">
  <SocialPill href="https://github.com/frlawer">
    <GithubIcon class="size-8" />
    Github
  </SocialPill>
  <SocialPill href="https:/linkedin.com/in/frandir">
    <LinkedInIcon class="size-8" />
    LinkedIn
  </SocialPill>
  <SocialPill class="cursor-pointer">
    <EmailIcon id="botonCopiar" class="size-12" />
    <div
      data-tooltip-target="tooltipCopy"
      data-tooltip-trigger="click"
      data-tooltip-placement="right"
      id="textoACopiar"
    >
      frlawer@gmail.com
    </div>
  </SocialPill>
  <div
    id="tooltipCopy"
    role="tooltip"
    class="tooltip invisible absolute z-50 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm transition-opacity duration-300 dark:bg-gray-700"
  >
    Email copiado.!
    <div class="tooltip-arrow" data-popper-arrow></div>
  </div>
</nav>

<!-- Show tooltip on click -->

<script>
  const botonCopiar = document.getElementById("botonCopiar");
  const textoACopiar = document.getElementById("textoACopiar");

  botonCopiar.addEventListener("click", () => {
    // Crear un área de texto temporal
    const areaTextoTemporal = document.createElement("textarea");
    areaTextoTemporal.value = textoACopiar.textContent;

    // Añadir el área de texto al documento
    document.body.appendChild(areaTextoTemporal);

    // Seleccionar y copiar el texto
    areaTextoTemporal.select();
    document.execCommand("copy");

    // Eliminar el área de texto temporal
    document.body.removeChild(areaTextoTemporal);

    // Puedes agregar lógica adicional aquí, como mostrar un mensaje de éxito
    console.log("Texto copiado con éxito");
  });
</script>
