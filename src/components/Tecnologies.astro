---
import Html5Icon from "../icons/Html5.astro";
import JavascriptIcon from "../icons/Javascript.astro";
import CssIcon from "../icons/Css.astro";
import PhpIcon from "../icons/Php.astro";
import ReactIcon from "../icons/ReactJs.astro";
import LaravelIcon from "../icons/Laravel.astro";
import GitIcon from "../icons/Git.astro";
import NodeJsIcon from "../icons/NodeJs.astro";
import TailwindIcon from "../icons/Tailwind.astro";
import GithubIcon from "../icons/Github.astro";
import MysqlIcon from "../icons/Mysql.astro";
import FigmaIcon from "../icons/Figma.astro";
---


<div class="
  grid gap-8 mx-auto 
  lg:grid-cols-6 
  md:grid-cols-3 
  grid-cols-3 w-full
  ">
  <div><Html5Icon class="h-auto max-w-full rounded-lg" /></div>
  <div><CssIcon class="h-auto max-w-full rounded-lg" /></div>
  <div><JavascriptIcon class="h-auto max-w-full rounded-lg" /></div>
  <div><PhpIcon class="h-auto max-w-full rounded-lg text-white" /></div>
  <div><MysqlIcon class="h-auto max-w-full rounded-lg text-white" /></div>
  <div><GitIcon class="h-auto max-w-full rounded-lg text-white" /></div>
  <div><FigmaIcon class="h-auto max-w-fit rounded-lg text-white" /></div>
  <div><TailwindIcon class="h-auto max-w-full rounded-lg text-white" /></div>
  <div><ReactIcon class="h-auto max-w-full rounded-lg text-white" /></div>
  <div><LaravelIcon class="h-auto max-w-full rounded-lg text-white" /></div>
  <div><NodeJsIcon class="h-auto max-w-full rounded-lg text-white" /></div>
  <div><GithubIcon class="h-auto max-w-full rounded-lg text-white" /></div>
</div>
