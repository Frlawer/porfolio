---
import ListDetailIcon from "../icons/ListDetail.astro";
interface Props {
  title: string;
  description: string;
  date: string;
  company: string;
  link?: string;
  img?: string;
}

const { title, description, date, company, link, img } = Astro.props;
---

<span
  class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900"
>
  <ListDetailIcon class="text-blue-950" />
</span>
<h3
  class="flex items-center mb-1 text-lg font-semibold text-slate-200 dark:text-white"
>
  {title}
  <span
    class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3"
  >
    <a href={link} rel="noopener noreferrer" target="_blank">{company}</a>
  </span>
</h3>
<time
  class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >{date}</time
>
<div class="lg:flex">

  <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-balance">
    {description}
  </p>
  
  {img &&
    <img
    class="object-fill rounded-lg shadow-lg sm:w-full sm:h-auto lg:w-1/2 lg:h-48"
    src={img}
    alt=`Web de ${company}, por Fran`
    />
  }
</div>
